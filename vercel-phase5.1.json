{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "api/audio/analyze.js": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "env": {
    "ENABLE_BACKEND_DECODER": "false",
    "AUTO_FALLBACK": "true",
    "DEBUG_AUDIO_DECODER": "false"
  },
  "build": {
    "env": {
      "FFMPEG_PATH": "./node_modules/ffmpeg-static/ffmpeg"
    }
  }
}
