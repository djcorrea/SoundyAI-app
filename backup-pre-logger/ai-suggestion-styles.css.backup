/* üé® AGRUPAMENTO DE CARDS POR CATEGORIA */
.ai-suggestion-group {
    margin-bottom: 24px;
}

.ai-group-header {
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 1px;
    color: rgba(59, 130, 246, 0.9);
    text-transform: uppercase;
    padding: 8px 12px;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(99, 102, 241, 0.15) 100%);
    border-left: 3px solid rgba(59, 130, 246, 0.7);
    border-radius: 4px;
    margin-bottom: 12px;
    backdrop-filter: blur(10px);
}

/* === CONTAINER PRINCIPAL NA MODAL EXISTENTE === */
.ai-suggestions-container {
    margin-top: 24px;
    padding: 20px;
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(30, 41, 59, 0.9) 100%);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.ai-suggestions-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.6), transparent);
}

.ai-suggestions-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
}

.ai-suggestions-header h4 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: #f1f5f9;
    display: flex;
    align-items: center;
    gap: 8px;
}

.ai-status-badge {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 20px;
    font-size: 12px;
    color: #93c5fd;
    transition: all 0.3s ease;
}

.ai-status-badge.processing {
    background: rgba(251, 191, 36, 0.1);
    border-color: rgba(251, 191, 36, 0.2);
    color: #fbbf24;
}

.ai-status-badge.success {
    background: rgba(34, 197, 94, 0.1);
    border-color: rgba(34, 197, 94, 0.2);
    color: #4ade80;
}

.ai-status-badge.error {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.2);
    color: #f87171;
}

.ai-status-icon {
    font-size: 14px;
    animation: ai-pulse 2s infinite;
}

@keyframes ai-pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

.ai-suggestions-content {
    min-height: 60px;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.ai-suggestions-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 16px;
    padding-top: 16px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.ai-powered-by {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: #94a3b8;
}

.ai-model-badge {
    padding: 4px 8px;
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.2);
    border-radius: 6px;
    font-size: 11px;
    font-weight: 600;
    color: #c084fc;
}

/* === MODAL GLASSMORPHISM TELA CHEIA === */
.ai-full-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.ai-full-modal.show {
    opacity: 1;
}

.ai-full-modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(8px);
}

.ai-full-modal-container {
    position: relative;
    width: 95vw;
    max-width: 1400px;
    height: 90vh;
    background: linear-gradient(135deg, 
        rgba(15, 23, 42, 0.95) 0%, 
        rgba(30, 41, 59, 0.98) 50%, 
        rgba(15, 23, 42, 0.95) 100%);
    backdrop-filter: blur(40px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    box-shadow: 
        0 25px 50px -12px rgba(0, 0, 0, 0.5),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    overflow: hidden;
    transform: scale(0.9);
    transition: transform 0.3s ease;
}

.ai-full-modal.show .ai-full-modal-container {
    transform: scale(1);
}

.ai-full-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 24px 32px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    background: linear-gradient(90deg, 
        rgba(59, 130, 246, 0.05) 0%, 
        rgba(168, 85, 247, 0.05) 100%);
}

.ai-modal-title h2 {
    margin: 0;
    font-size: 28px;
    font-weight: 700;
    background: linear-gradient(135deg, #3b82f6, #a855f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.ai-modal-subtitle {
    font-size: 14px;
    color: #94a3b8;
    margin-top: 4px;
}

.ai-modal-close {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    border-radius: 12px;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: #f87171;
    font-size: 20px;
    font-weight: bold;
}

.ai-modal-close:hover {
    background: rgba(239, 68, 68, 0.2);
    transform: scale(1.05);
}

.ai-full-modal-content {
    height: calc(100% - 180px);
    overflow-y: auto;
    padding: 24px 32px;
}

/* === PRIORITY BANNER - DESIGN FUTURISTA === */
.priority-banner {
    display: flex !important;
    align-items: center;
    gap: 12px;
    padding: 14px 18px;
    border-radius: 10px;
    font-weight: 600;
    background: linear-gradient(90deg, #6d00ff 0%, #00bfff 100%) !important;
    color: #ffffff !important;
    margin-bottom: 12px;
    box-shadow: 
        0 4px 20px rgba(109, 0, 255, 0.25),
        0 0 30px rgba(0, 191, 255, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    animation: glowPulse 2.5s ease-in-out infinite alternate;
    position: relative;
    z-index: 10;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
}

.priority-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, #6d00ff 0%, #00bfff 100%);
    border-radius: 10px;
    opacity: 0.9;
    z-index: -1;
}

.priority-icon {
    font-size: 22px;
    line-height: 1;
    min-width: 22px;
    color: #ffffff;
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.6);
    animation: flashEnergy 1.8s ease-in-out infinite;
    filter: drop-shadow(0 0 4px rgba(0, 191, 255, 0.8));
}

.priority-text {
    flex: 1;
    font-size: 15px;
    line-height: 1.5;
    color: #ffffff;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    letter-spacing: 0.3px;
}

.priority-text b {
    color: #e0f7ff;
    font-weight: 700;
    text-shadow: 0 0 6px rgba(0, 191, 255, 0.7);
}

/* Anima√ß√£o de pulsa√ß√£o de brilho */
@keyframes glowPulse {
    0% { 
        box-shadow: 
            0 4px 20px rgba(109, 0, 255, 0.25),
            0 0 30px rgba(0, 191, 255, 0.15),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        transform: scale(1);
    }
    50% {
        box-shadow: 
            0 6px 25px rgba(109, 0, 255, 0.35),
            0 0 40px rgba(0, 191, 255, 0.25),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
        transform: scale(1.005);
    }
    100% { 
        box-shadow: 
            0 4px 20px rgba(109, 0, 255, 0.25),
            0 0 30px rgba(0, 191, 255, 0.15),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        transform: scale(1);
    }
}

/* Anima√ß√£o de energia do √≠cone */
@keyframes flashEnergy {
    0% { 
        transform: scale(1);
        filter: drop-shadow(0 0 4px rgba(0, 191, 255, 0.8));
        text-shadow: 0 0 8px rgba(255, 255, 255, 0.6);
    }
    25% {
        transform: scale(1.1);
        filter: drop-shadow(0 0 8px rgba(109, 0, 255, 0.9));
        text-shadow: 0 0 12px rgba(255, 255, 255, 0.8);
    }
    50% {
        transform: scale(1.05);
        filter: drop-shadow(0 0 6px rgba(0, 191, 255, 0.8));
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.7);
    }
    75% {
        transform: scale(1.08);
        filter: drop-shadow(0 0 8px rgba(109, 0, 255, 0.9));
        text-shadow: 0 0 12px rgba(255, 255, 255, 0.8);
    }
    100% { 
        transform: scale(1);
        filter: drop-shadow(0 0 4px rgba(0, 191, 255, 0.8));
        text-shadow: 0 0 8px rgba(255, 255, 255, 0.6);
    }
}

/* Hover effect para interatividade */
.priority-banner:hover {
    box-shadow: 
        0 6px 30px rgba(109, 0, 255, 0.4),
        0 0 50px rgba(0, 191, 255, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transform: translateY(-1px);
    transition: all 0.3s ease;
}

