}

/* === BOT√ïES === */
.action-btn.ai-toggle {
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.2);
    color: #c084fc;
}

.action-btn.ai-toggle:hover {
    background: rgba(168, 85, 247, 0.2);
}

/* === ESTADOS ESPECIAIS === */
.ai-suggestions-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40px;
    text-align: center;
}

.ai-loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(59, 130, 246, 0.2);
    border-top: 3px solid #3b82f6;
    border-radius: 50%;
    animation: ai-spin 1s linear infinite;
    margin-bottom: 16px;
}

@keyframes ai-spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.ai-loading-text {
    font-size: 14px;
    color: #94a3b8;
}

.ai-suggestions-error {
    padding: 24px;
    text-align: center;
    color: #f87171;
}

/* üé® Sugest√µes Base (sem IA) */
.ai-suggestion-card.ai-base-suggestion {
    background: linear-gradient(135deg, 
        rgba(255, 193, 7, 0.1) 0%, 
        rgba(255, 193, 7, 0.05) 100%);
    border-color: rgba(255, 193, 7, 0.3);
}

.ai-suggestion-card.ai-base-suggestion:hover {
    border-color: rgba(255, 193, 7, 0.5);
}

.ai-base-notice {
    background: rgba(255, 193, 7, 0.1);
    border: 1px solid rgba(255, 193, 7, 0.3);
    border-radius: 8px;
    padding: 0.5rem 0.75rem;
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: #f59e0b;
    text-align: center;
}

/* üé® Prompt de Configura√ß√£o */
.ai-config-prompt {
    background: linear-gradient(135deg, 
        rgba(99, 102, 241, 0.1) 0%, 
        rgba(99, 102, 241, 0.05) 100%);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 12px;
    padding: 1rem;
    margin-top: 1rem;
    animation: aiPulseGlow 2s ease-in-out infinite;
}

.ai-config-message {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.ai-config-icon {
    font-size: 1.5rem;
    animation: aiFloat 3s ease-in-out infinite;
}

.ai-config-text {
    flex: 1;
}

.ai-config-text strong {
    color: #6366f1;
    font-weight: 600;
}

.ai-config-text p {
    margin: 0.25rem 0 0 0;
    font-size: 0.875rem;
    opacity: 0.8;
}

.ai-suggestions-empty {
    padding: 24px;
    text-align: center;
    color: #94a3b8;
}

/* === RESPONSIVIDADE === */
@media (max-width: 1200px) {
    .ai-suggestions-grid {
        grid-template-columns: 1fr;
    }
    
    .ai-full-modal-container {
        width: 98vw;
        height: 95vh;
    }
}

@media (max-width: 768px) {
    .ai-full-modal-header,
    .ai-full-modal-content,
    .ai-full-modal-footer {
        padding: 16px 20px;
    }
    
    .ai-modal-title h2 {
        font-size: 22px;
    }
    
    .ai-suggestion-card {
        padding: 16px;
    }
    
    .ai-stats-container {
        flex-direction: column;
        gap: 8px;
    }
    
    .ai-modal-actions {
        flex-direction: column;
        width: 100%;
    }
    
    .ai-modal-actions .action-btn {
        width: 100%;
    }
}

/* === ANIMA√á√ïES E EFEITOS === */
.ai-fade-in {
    animation: ai-fadeIn 0.5s ease forwards;
}

@keyframes ai-fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.ai-suggestion-card.ai-new {
    animation: ai-slideInUp 0.6s ease forwards;
}

@keyframes ai-slideInUp {
    from {
        opacity: 0;
        transform: translateY(30px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

/* === INDICADORES DE STATUS === */
.ai-connection-status {
    position: fixed;
    top: 20px;
    right: 20px;
    padding: 8px 16px;
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    font-size: 12px;
    color: #94a3b8;
    z-index: 9999;
    display: none;
}

.ai-connection-status.show {
    display: block;
    animation: ai-fadeIn 0.3s ease;
}

.ai-connection-status.connected {
    color: #4ade80;
    border-color: rgba(34, 197, 94, 0.2);
}

.ai-connection-status.error {
    color: #f87171;
    border-color: rgba(239, 68, 68, 0.2);
}

/* === MELHORIAS DE ACESSIBILIDADE === */
.ai-suggestion-card:focus {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
}

.ai-modal-close:focus {
    outline: 2px solid #ef4444;
    outline-offset: 2px;
}

/* === MODO COMPACTO (fallback para telas pequenas) === */
.ai-suggestions-compact {
    padding: 12px;
}

.ai-suggestions-compact .ai-suggestion-card {
    padding: 16px;
    margin-bottom: 12px;
}

.ai-suggestions-compact .ai-block {
    padding: 12px;
}

/* === OVERLAY DE CONFIGURA√á√ÉO R√ÅPIDA === */
.ai-quick-config {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 16px;
    z-index: 9998;
    display: none;
    min-width: 280px;
}

.ai-quick-config.show {
    display: block;
    animation: ai-slideInUp 0.3s ease;
}

.ai-config-title {
    font-size: 14px;
    font-weight: 600;
    color: #f1f5f9;
    margin-bottom: 12px;
}

.ai-config-input {
    width: 100%;
    padding: 8px 12px;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #f1f5f9;
    font-size: 12px;
    margin-bottom: 8px;
}

.ai-config-input:focus {
    outline: none;
    border-color: #3b82f6;
}

.ai-config-actions {
    display: flex;
    gap: 8px;
    justify-content: flex-end;
}

.ai-config-btn {
    padding: 6px 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    background: rgba(59, 130, 246, 0.1);
    color: #60a5fa;
    font-size: 11px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.ai-config-btn:hover {
    background: rgba(59, 130, 246, 0.2);
}

/* üé® CORRE√á√ÉO DE LAYOUT PARA CARDS DE SUGEST√ïES DE IA */
.ai-content .ai-card,
.ai-content .ai-suggestion-card {
    background: rgba(80, 40, 200, 0.25) !important;
